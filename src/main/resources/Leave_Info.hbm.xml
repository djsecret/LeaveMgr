<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.neu.pojo.Leave_Info" table="leave_info" catalog="leavemgr" lazy="false">
        <id name="id" column="id" type="integer">
            <generator class="increment"/>
        </id>
        <property name="begin_time" column="begin_time" type="date"/>
        <property name="days" column="days" type="int"/>
        <property name="apply_time" column="apply_time" type="date"/>
        <property name="reason" column="reason" type="string"/>
        <property name="result" column="result" type="int"/>
        <property name="handle_time" column="handle_time" type="date"/>
        <property name="valid" column="valid" type="int"/>
        <property name="proposer_id" column="proposer_id" type="int"/>
        <property name="proposer_name" column="proposer_name" type="string"/>
        <property name="auditor_id" column="auditor_id" type="int"/>
        <property name="auditor_name" column="auditor_name" type="string"/>

    </class>

</hibernate-mapping>